<?xml version="1.0" encoding="UTF-8"?>
<!-- xmlns:c 생성자 이용 네임스페이스, xmlns:p는 프로퍼티 이용 네임스페이스 -->
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:c="http://www.springframework.org/schema/c"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
			http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="student3" class="com.wvwv.ch06ex01.Student" >
		<constructor-arg value="홍길자" />
		<constructor-arg value="8" />
		<constructor-arg>
			<list>
				<value>줄넘기</value>
				<value>공기놀이</value>
			</list>
		</constructor-arg>
		<property name="height" value="126" />
		<property name="weight" value="21" />
	</bean>
	
	<!-- 네임스페이스를 활용한 bean 생성 c:paramName="value" / p:propName="value" -->
	<bean id="family" class="com.wvwv.ch06ex01.Family" 
		  c:papaName="홍홍홍" c:mamiName="호호호" 
		  p:sisterName="홍호호" p:brotherName="홍허허" />
	
	
</beans>
