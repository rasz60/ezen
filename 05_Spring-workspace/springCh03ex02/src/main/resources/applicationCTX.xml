<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- bean id : obj name / class : constructor class path -->
<bean id="calculator" class="com.wvwv.ch03ex02.Calculator" />

<bean id="myCalculator" class="com.wvwv.ch03ex02.MyCalculator">
	<!-- bean 'myCalculator' property set -->
	
	<!-- 참조변수 선언 / ref : 참조가 되는 객체 (배열, 리스트, String 제외) -->
	<!-- bean 생성시 클래스 내부 속성 값과 같은 이름의 name을 주어야 한다. -->
	<property name="calc" >
		<ref bean="calculator" />
	</property>
	
	<!-- 클래스 내부 변수 값 선언 -->
	<property name="firstNum" value="10" />
	<property name="secondNum" value="2" />
</bean>

</beans>
