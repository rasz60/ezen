
import java.io.*;

public class FileReaderEx01 {

	public static void main(String[] args) {
		try {
			String fileName = "src/test.txt";
			FileInputStream fis = new FileInputStream(fileName);		// 바이트 기반 FileInputStream
			FileReader fr = new FileReader(fileName);					// 문자 기반 FileReader
			
			int data = 0;
			
			while( (data = fis.read()) != -1 ) {
				System.out.print((char)data);
			}
			System.out.println();
			fis.close();
			
			while( (data = fr.read()) != -1 ) {
				System.out.print((char)data);
			}
			System.out.println();
			fr.close();
			
		} catch (IOException ie) {
			ie.printStackTrace();
		}
		
	}

}
